# PostgreSQL connection string (replace placeholders)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DATABASE_NAME

# JWT secret for signing tokens (keep this secure)
JWT_SECRET=your_jwt_secret_here

# Make.com webhook URL to trigger your scenario
MAKE_SCENARIO_WEBHOOK_URL=https://hook.integromat.com/your_scenario_id

# Shared secret or header value to validate Make.com callbacks
MAKE_CALLBACK_SECRET=your_callback_secret_here

# Server base URL for constructing callback URLs (replace with your domain)
API_BASE_URL=https://your-api-domain

# Server port
PORT=4000 